#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main(){
    float media;
    
    setlocale(LC_ALL, "");
    
    printf("Digite a nota do aluno: \n");
    scanf("%f", &media);
    if(media >= 7.0){
        printf("Aprovado direto! \n");
    }else{
        if(media >= 4.0)
            printf("Vai fazer substitutiva! \n");
        else
            printf("Est√° reprovado!");
    }
}
