// Linguagem: C
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "");

    int resto, numero;

    printf("Digite um número: \n");
    scanf("%d", &numero);
    resto = numero % 2;
    if(resto == 0)
    {
      printf("Par!");
    }else{
      printf("Ímpar!");
    }
}
