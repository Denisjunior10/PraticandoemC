#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "");

    int numant, numsuc, numero;

    printf("Digite um número:");
    scanf("%d", &numero);
    
    numsuc = numero + 1;
    numant = numero - 1;

    printf("O número informado foi: %d\n", numero);
    printf("O antecessor do número é: %d\n", numant);
    printf("O sucessor do número é: %d\n", numsuc);
    return (0);
}
